{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2020"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
